class Solution {
    public int jump(int[] nums) {
        int n=nums.length;
        int currend =0,jumps=0;
        int currfar=0;

        for(int i=0;i<n-1;i++){
            currfar = Math.max(currfar, nums[i]+i);

            if(i == currend ){
                jumps++;
                currend= currfar;
            }
        
        }
        return jumps;
    }
}
