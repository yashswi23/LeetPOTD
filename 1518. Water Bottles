class Solution {
    public int numWaterBottles(int numBottles, int numExchange) {
        int totalbott = numBottles;
        while(numBottles>= numExchange){
            int ans = numBottles/numExchange;
            totalbott+= ans;
            numBottles= ans + numBottles%numExchange;
        }
        return totalbott;
    }
}
